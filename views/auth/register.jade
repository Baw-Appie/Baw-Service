extends ../includes/layout
block contents

  form(method='post')
    fieldset.uk-fieldset
      legend.uk-legend Baw Service 회원가입
      .uk-margin
        label 아이디
        input.uk-input(type='text', placeholder='ID')
      .uk-margin
        label 비밀번호
        input.uk-input(type='password', placeholder='비밀번호')
      .uk-margin
        label 비밀번호 확인
        input.uk-input(type='password', placeholder='비밀번호 확인')
      .uk-margin
        label 서버 이름
        br
        .uk-inline.uk-width-1-1
          input.uk-input(type='text', placeholder='서버 이름 ("서버"는 자동 입력)')
          p.uk-form-icon.uk-form-icon-flip(style="background-color: #b4b6ba;") 서버
      .uk-margin
        label 이메일
        input.uk-input(type='email', placeholder='이메일')
      .uk-margin
        label 전화번호
        input.uk-input(type='number', placeholder='전화번호 ("-"은 제외)')
        
      button.uk-button.uk-button-primary(type="submit")
        i(class="fas fa-user-plus")
        |  회원 가입
      button.uk-button.uk-button-default(type="reset")
        i(class="fas fa-undo")
        |  재입력
