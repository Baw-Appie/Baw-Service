    new Chart(
      document.getElementById("chart"),
      {
        "type":"line",
        "data":
        {
          "labels":
          [
            "A사",
            "Baw Service",
            "C사"
          ],
          "datasets":
          [
            {
              "label":"응답 속도",
              "data":
              [
                0.89,
