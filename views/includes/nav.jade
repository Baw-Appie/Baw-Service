  .uk-navbar-left
    a.uk-navbar-item.uk-logo(href='#')
      img(src="https://#{hostname}/public/img/logo.jpg")
    ul.uk-navbar-nav(class="uk-visible@s")
      li
        a(href='#')
          span.uk-icon.uk-margin-small-right(uk-icon='icon: star')
          |                     Features
      .uk-navbar-item
        div
          | Some 
          a(href='#') Link
      .uk-navbar-item
        form(action='javascript:void(0)')
          input.uk-input.uk-form-width-small(type='text', placeholder='Input')
          button.uk-button.uk-button-default Button
  .uk-navbar-right
    ul.uk-navbar-nav(class='uk-visible@s')
      button.uk-button.uk-button-default.uk-margin-small-right(type='button', uk-toggle='target: #login-slide') 로그인
    a.uk-navbar-toggle(uk-navbar-toggle-icon='', href='#offcanvas-slide', class='uk-hidden@s', uk-toggle='')
    
    
    
    #login-slide(uk-offcanvas='overlay: true')
      .uk-offcanvas-bar
        button.uk-offcanvas-close(type='button', uk-close='')
        h3 로그인
