if pjax
    if session.error
      .uk-alert-warning(uk-alert)
        a.uk-alert-close(uk-close)
        p= session.error
        - delete session.error;
    block contents
    block extscript
else
  doctype html
  head
    include ./header.jade
  body
    include ./nav.jade
    div(uk-grid)
      div(class='uk-width-1-5@m uk-grid-small uk-text-center')
        div(class='uk-visible@m')
          include ./sidebar.jade
      div(class='uk-width-2-3@m')
        #contents
          if session.error
            .uk-alert-warning(uk-alert)
              a.uk-alert-close(uk-close)
              p= session.error
              - delete session.error;
          block contents
  include ./footer.jade
  block extscript
